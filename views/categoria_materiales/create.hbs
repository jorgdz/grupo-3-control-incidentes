<section class="profile-account-setting">
    <hr>
    <div class="container">
        <div class="post-project-fields">
            <form action="/categoria-materiales" method="POST">
                <div class="row">
                    {{#if error}}
                        <script>alert("Ingrese un nombre valido")</script>
                    {{/if}}
                    <div class="col-lg-6">
                        <label for="">Nombre</label><br><br>
                        <input type="text" name="nombre" 
                            placeholder="Nombre de la categoría" required>
                    </div>
                </div>
                <div class="col-lg-12">
                    <ul>
                        <li><button class="active" type="submit">Guardar</button></li>
                    </ul>
                </div>
            </form>
        </div>
    </div>
</section>

