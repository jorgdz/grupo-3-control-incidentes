{{#extend "head"}}
{{> title title="Editar villa" }}
{{/extend}}

    {{#extend "header"}}
    {{> admin/header}}
    {{/extend}}
    <br>
    <br>
    <br>
    <br>
    <br>
    <section class="profile-account-setting">
      <hr>
      <div class="container">
        <div class="post-project-fields">
          {{#if success}}
            <div style="color: rgb(46, 136, 61); font-weight: bold; font-size: 20px; padding:1em;">
              <span>{{ success }}</span>
            </div>
            <hr>
          {{/if}}
          
          {{#if error}}
            <div style="color: crimson; font-weight: bold; font-size: 20px; padding:1em;">
              <span>{{ error }}</span>
            </div>
            <hr>
          {{/if}}
          
          {{#if message}}
            <div style="color: rgb(16, 92, 143); font-weight: bold; font-size: 20px;">
              <span>{{ message }}</span>
            </div>
            <hr>
          {{/if}}

          {{#if errorsValidator}}
            <ul style="color: crimson; font-weight: bold; font-size: 20px; padding:1em;">
              {{#each errorsValidator}}
                <li>{{ msg }}</li>
              {{/each}}
            </ul>
            <hr>
          {{/if}}

          <form action="/villas/{{ villa.dataValues.id }}/update" method="POST">
            <div class="row">
              <div class="col-lg-6">
                <label for="">Número de villa</label><br><br>
                <input type="text" name="numero" value="{{ villa.dataValues.numero }}" placeholder="Número">
              </div>
              <div class="col-lg-6">
                <label for="">Referencia de la villa</label><br><br>
                <input type="text" name="referencia" value="{{ villa.dataValues.referencia }}" placeholder="Referencia">
              </div>
            </div>
            <div class="row">
              <div class="col-lg-6">
                <label for="">Dirección de la villa</label><br><br>
                <input type="text" name="direccion" value="{{ villa.dataValues.direccion }}" placeholder="Dirección">
              </div>
              <div class="col-lg-6">
                <label for="">Bloque</label><br><br>
                <select id="inputState" name="bloque_id" class="form-control">
                  <option value="0">Seleccione un bloque</option>
                  {{#each bloques}}
                    {{#if_cond dataValues.id ../villa.dataValues.bloque_id}}
                      <option selected="selected" value="{{dataValues.id}}">{{dataValues.nombre}}</option>
                    {{else}}
                      <option value="{{dataValues.id}}">{{dataValues.nombre}}</option>
                    {{/if_cond}}
                  {{/each}}
                </select>
              </div>
            </div>
            <div class="col-lg-12">
              <ul>
                <li><button class="active" type="submit">Guardar</button></li>
              </ul>
            </div>
          </form>
        </div>
      </div>
    </section>
    
    {{> admin/footer}}

{{#extend "scripts"}}
<script src="/javascripts/flatpickr.min.js"></script>
<script src="/stylesheets/lib/slick/slick.min.js"></script>
<script src="/javascripts/script.js"></script>
{{/extend}}
