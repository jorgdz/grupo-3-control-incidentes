{{#extend "head"}}
{{> title title="Roles"}}
{{/extend}}

    {{#extend "header"}}
    {{> admin/header}}
    {{/extend}}
    <br>
    <br>
    <br>
    <br>
    <br>
    <section class="profile-account-setting">
      <hr>
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            {{#if success}}
              <div style="color: rgb(46, 136, 61); font-weight: bold; font-size: 20px; padding:1em;">
                <span>{{ success }}</span>
              </div>
              <hr>
            {{/if}}
            
            {{#if error}}
              <div style="color: crimson; font-weight: bold; font-size: 20px; padding:1em;">
                <span>{{ error }}</span>
              </div>
              <hr>
            {{/if}}
            
            {{#if message}}
              <div style="color: rgb(16, 92, 143); font-weight: bold; font-size: 20px;">
                <span>{{ message }}</span>
              </div>
              <hr>
            {{/if}}

            {{#if errorsValidator}}
              <ul style="color: crimson; font-weight: bold; font-size: 20px; padding:1em;">
                {{#each errorsValidator}}
                  <li>{{ msg }}</li>
                {{/each}}
              </ul>
              <hr>
            {{/if}}

            <table class="table table-striped">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Nombre del rol</th>
                  <th scope="col">Editar</th>
                </tr>
              </thead>
              <tbody>
                {{#each roles}}
                <tr>
                  <td scope="row">{{sumTwoValue @index 1}}</td>
                  <td>{{ dataValues.name }}</td>
                  <td>
                    <a href="/roles/{{ dataValues.id }}/editar" class="btn btn-info"><i class="fa fa-pencil"></i></a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>
    
    {{> admin/footer}}

{{#extend "scripts"}}
<script src="/javascripts/flatpickr.min.js"></script>
<script src="/stylesheets/lib/slick/slick.min.js"></script>
<script src="/javascripts/script.js"></script>
{{/extend}}
