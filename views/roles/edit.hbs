{{#extend "head"}}
{{> title title="Editar rol" }}
{{/extend}}

    {{#extend "header"}}
    {{> admin/header}}
    {{/extend}}
    <br>
    <br>
    <br>
    <br>
    <br>
    <section class="profile-account-setting">
      <hr>
      <div class="container">
        <div class="post-project-fields">
          <form action="/roles/{{role.dataValues.id}}/editar" method="POST">
            <div class="row">
              <div class="col-lg-8">
                <input type="text" name="name" value="{{ role.dataValues.name }}" placeholder="Nombre del rol">
              </div>
            </div>

            <div class="col-lg-12">
              <ul>
                <li><button class="active" type="submit">Guardar cambios</button></li>
              </ul>
            </div>
          </form>
        </div>
      </div>
    </section>
    
    {{> admin/footer}}

{{#extend "scripts"}}
<script src="/javascripts/flatpickr.min.js"></script>
